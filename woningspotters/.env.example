# WoningSpotters Environment Variables
# Copy this file to .env.local and fill in your values

# ===================
# SUPABASE
# ===================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ===================
# APIFY (voor woningen scrapen)
# ===================
APIFY_API_TOKEN=your_apify_token_here
# Optional: Custom Apify Actor ID (defaults to dtrungtin/funda-scraper)
# APIFY_ACTOR_ID=your_actor_id

# ===================
# RESEND (voor nieuwsbrief emails)
# ===================
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxx

# ===================
# SITE CONFIG
# ===================
NEXT_PUBLIC_SITE_URL=https://woningspotters.nl

# ===================
# NEWSLETTER (beveiligingssleutel voor versturen)
# ===================
# Generate a random string for protecting the send endpoint
NEWSLETTER_API_KEY=your_secret_newsletter_key_here
